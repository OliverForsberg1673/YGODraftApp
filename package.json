{
  "name": "ygodraftwebapp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx src/backend/server.ts",
    "build:backend": "tsc --project tsconfig.json",
    "build": "npm run build:backend && vite build --config src/frontend/vite.config.js",
    "start": "NODE_ENV=production node dist/backend/server.js",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "ci:e2e": "concurrently -k -s first -n server,test \"npm start\" \"npx wait-on http://localhost:3000 && npm run test:e2e\""
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.20.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.20",
    "concurrently": "^9.2.1",
    "mongodb-memory-server": "^10.2.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}
